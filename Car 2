 */
public class var2 extends Mover
{
     /**
     * Act - do whatever the car1 wants to do. This method is called whenever
     * the 'Act' or 'Run' button gets pressed in the environment.
     */
    public void act() 
   {
       move(speed2);
       turnAtEdge();
       enemy();
       
   
   }
   
   public void turnAtEdge()
    {
        if(atWorldEdge() )
        {
             turn(180);
        }
    } 
}
